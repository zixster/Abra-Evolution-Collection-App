// Firestore rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public card data
    match /cards/{card} {
      allow read: if true;
      allow write: if false; // only scripts should write
    }

    // User collections
    match /users/{uid} {
      allow read: if true;

      match /ownership/{cardId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
